# 1. Create project dir and set up backend
mkdir video_codec_app
cd video_codec_app

# 2. create py venv
python -m venv venv
source venv/bin/activate

# 3. install backed dependencies
pip install flask python-magic numpy

# 4. set up react frontend
npm create vide@latest frontend -- --template react
cd frontend
npm install

# 6. install req frontend dependencies
npm isntall lucide-react @radix-react-alert-dialog tailwindcss postcss autoprefixer @tailwindcss/forms
